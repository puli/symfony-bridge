{
    "name": "puli/symfony-bridge",
    "description": "Integrates the Puli library with the Symfony components.",
    "license": "MIT",
    "authors": [
        {
            "name": "Bernhard Schussek",
            "email": "bschussek@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.9",
        "puli/repository": "~1.0",
        "symfony/config": "~2.3",
        "symfony/http-kernel": "~2.3"
    },
    "minimum-stability": "alpha",
    "autoload": {
        "psr-4": {
            "Puli\\Extension\\Symfony\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Puli\\Extension\\Symfony\\Tests\\": "tests/",
            "Puli\\Repository\\Tests\\": "vendor/puli/repository/tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
