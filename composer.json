{
    "name": "puli/symfony-bridge",
    "description": "Integrates the Puli library with the Symfony components.",
    "homepage": "http://puli.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Bernhard Schussek",
            "email": "bschussek@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.9",
        "puli/repository": "~1.0",
        "symfony/config": "~2.3",
        "symfony/http-kernel": "~2.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.6",
        "sebastian/version": "^1.0.1"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Puli\\SymfonyBridge\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Puli\\SymfonyBridge\\Tests\\": "tests/",
            "Puli\\Repository\\Tests\\": "vendor/puli/repository/tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "support": {
        "issues": "https://github.com/puli/issues/issues"
    }
}
